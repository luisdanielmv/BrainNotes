{
  "name": "brainnotes",
  "version": "1.0.0",
  "description": "Evernotes Clone",
  "main": "index.js",
  "config": {
    "port": "8080"
  },
  "scripts": {
    "prestart": "npm run build && npm run lint",
    "start": "npm run server",
    "lint": "npm-run-all lint:*",
    "lint:css": "stylelint ./dist/css/*.css",
    "lint:js": "stylelint ./dist/css/*.css",
    "watch": "npm-run-all --parallel watch:*",
    "watch:changes": "onchange \"src/**/*.scss\" -- npm run build",
    "watch:lint": "onchange \"src/**/*.scss\" -- npm run lint",
    "//": "rimraf ./dist/ && mkdir -p dist/css && mkdir -p dist/img && mkdir -p dist/js",
    "prebuild": "rimraf ./dist/ && mkdir \"dist/css\" && mkdir \"dist/img\" && mkdir \"dist/js\"",
    "build": "npm-run-all build:*",
    "build:html": "cp ./src/index.html ./dist/ && cp ./src/favicon.ico ./dist/ ",
    "build:img": "cp ./src/img/logo.png ./dist/img/ ",
    "build:css": "npm run sass",
    "build:js": "uglifyjs ./src/js/*.js  ./node_modules/bootstrap-sass/assets/javascripts/bootstrap.min.js -o ./dist/js/main.js",
    "server": "npm-run-all --parallel server:*",
    "server:create": "cross-var http-server ./dist/",
    "server:launch": "cross-var opn http://localhost:$npm_package_config_port",
    "presass": "cp ./src/index.html ./dist/ && cp -R node_modules/mdi/fonts ./dist/fonts",
    "sass": "node-sass ./src/scss/main.scss --include-path ./src/scss/ --include-path ./node_modules/bootstrap-sass/assets/stylesheets/ --include-path ./node_modules/mdi/scss/ -o ./dist/css/  --output-style compressed",
    "test": "echo \"Error: no TEST specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luisdanielmv/BrainNotes.git"
  },
  "author": "Daniel Morales, Melvin Salas, Carlos Le√≥n",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/luisdanielmv/BrainNotes/issues"
  },
  "homepage": "https://github.com/luisdanielmv/BrainNotes#readme",
  "devDependencies": {
    "eslint": "^3.19.0",
    "onchange": "^3.2.1",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "uglify-js": "^3.0.1"
  },
  "dependencies": {
    "bootstrap-sass": "^3.3.7",
    "mdi": "^1.9.33",
    "npm-run-all": "^4.0.2",
    "opn-cli": "^3.1.0",
    "http-server": "^0.10.0",
    "node-sass": "^4.5.2",
    "cross-var": "^1.0.3",
    "rimraf": "^2.6.1"
  }
}
